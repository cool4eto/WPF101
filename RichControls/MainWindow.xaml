<Window x:Class="RichControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RichControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="FlowDocumentScrollViewer" Click="FlowDocumentScrollViewer_Click"/>
            <MenuItem Header="FlowDocumentPageViewer" Click="FlowDocumentPageViewer_Click"/>
            <MenuItem Header="FlowDocumentReader" Click="FlowDocumentReader_Click"/>
            <MenuItem Header="FlowDocumentScrollViewerCodeBehind" Click="FlowDocumentScrollViewerCodeBehind_Click"/>
            <MenuItem Header="RichTextBox " Click="RichTextBox_Click"/>
        </Menu>
    </DockPanel>
</Window>
